{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "paths": {
        "@app/*": ["./src/*"],
        "@controllers/*": ["./src/controllers/*"],
        "@database/*": ["./src/database/*"],
        "@middlewares/*": ["./src/middlewares/*"],
        "@routes/*": ["./src/routes/*"],
        "@services/*": ["./src/services/*"],
        "@utils/*": ["./src/utils/*"]
      },
      "sourceMap": true
    },
    "include": ["./src/**/*", "src/database/models/includes/.js"],
    "exclude": ["node_modules"]
}